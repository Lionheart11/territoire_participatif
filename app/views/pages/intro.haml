.splash-intro
  =image_tag "perche-participatif.png"

.navigation
  .container
    .bouton.nouveau-projet
      %a{href: new_projet_path}
        %span.icon
          %svg.icon-light-bulb{:role => "img"}
            %use{"xlink:href" => "#{image_url("icons.svg")}\#icon-light-bulb"}
        %span.action Je dépose un projet
    .bouton.sondage
      %a{href: new_sondage_path}
        %span.icon
          %svg.icon-bubble{:role => "img"}
            %use{"xlink:href" => "#{image_url("icons.svg")}\#icon-bubble"}
        %span.action Je participe à un sondage
    .bouton.actualites
      %a{href: lastactu_path}
        %span.icon
          %svg.icon-calendar{:role => "img"}
            %use{"xlink:href" => "#{image_url("icons.svg")}\#icon-calendar"}
        %span.action L'actualité des projets
    .bouton.howto
      %a{href: comment_ca_marche_path}
        %span.icon
          %svg.icon-question{:role => "img"}
            %use{"xlink:href" => "#{image_url("icons.svg")}\#icon-question"}
        %span.action Comment ça marche

.derniers-projets
  .liste-projets
    %h2 Les derniers projets
    = render partial: 'projets/projet', collection: @projets
  .split-centre= link_to 'Voir plus de projets', projets_path, class: 'center-block btn btn-lg btn-primary'
