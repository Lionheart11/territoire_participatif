<div class="text-center">
  <h2>Inscription</h2>
  <br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

<div class="col-sm-5 col-sm-offset-1">

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'input-lg' %>
    </div>

    <div class="field">
      <%= f.label :password, "Mot de passe"%>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> caractères minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'input-lg' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirmation du mot de passe" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input-lg' %>
    </div>

    <div class="field">
      <%= f.label :pseudo, "Nom d'utilisateur" %>
      <em>(Public)</em><br/>
      <%= f.text_field :pseudo, class: 'input-lg' %>
    </div>

</div>
<div class="col-sm-5">

    <div class="field">
      <%= f.label :nom %><br/>
      <%= f.text_field :nom, class: 'input-lg' %>
    </div>

    <div class="field">
      <%= f.label :prenom, "Prénom" %><br/>
      <%= f.text_field :prenom, class: 'input-lg' %>
    </div>

<div class="col-sm-6">

    <div class="field">
      <%= f.label :sexe, "Sexe" %><br/>
      <%= f.select :sexe, [ ["Femme", 'femme'],
                            ["Homme", 'homme']  ] %>
    </div>

</div>
<div class="col-sm-6">

    <div class="field">
      <%= f.label :annee_naissance, "Année de naissance" %><br/>
      <%= f.date_select :annee_naissance, discard_day: true, discard_month: true, start_year: Date.today.year - 7, end_year: Date.today.year - 115 %>
    </div>

</div>


    <div class="field">
      <%= f.label :telephone, "Numéro de téléphone" %><br/>
      <%= f.text_field :telephone, class: 'input-lg', type: 'tel' %>
    </div>


    <div class="field">
      <%= f.label :commune, "Commune de résidence" %><br/>
      <%= f.text_field :commune, class: 'input-lg' %>
    </div>

</div>

<div class="col-xs-12">

    <div class="field">
      <%= f.label :status, "Lien avec le territoire" %><br/>
      <%= f.select :status, [ ["Résident-e", 'resident'],
                              ["Travaille", 'work'],
                              ["En transit", 'transit'],
                              ["Résidence secondaire", 'resident2nd'],
                              ["Autre", 'other'] ] %>
    </div>



    <div class="field">
      <%= f.check_box :charte %>
      <%= f.label :charte, "J'ai lu et j'accepte la charte d'utilisation" %><br />
      <%= link_to "Lire la charte d'utilisation", charte_path %>
    </div>

    <div class="actions">
      <%= f.submit "S'inscrire", class: 'center-block btn btn-lg btn-primary' %>
    </div>
  <% end %>
<br>
  <p>
    J'ai déjà un compte :
    <%= render "devise/shared/links" %>
  </p>
</div>
</div>